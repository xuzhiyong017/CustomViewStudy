<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReversalSeekBarActivity">

    <com.sky.customviewstudy.view.ReversalSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:rs_backgroundColor="#E5E5E5"
        app:rs_pointerBackground="@drawable/icon_seek_bar_cursor"
        app:rs_progress="0.5"
        app:rs_progressColor="#FC4C70" />


    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:text="0.5"
        android:layout_marginTop="100dp"/>

    <SeekBar
        android:id="@+id/seek_bar_set"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:max="100"
        android:progress="30"/>
</FrameLayout>