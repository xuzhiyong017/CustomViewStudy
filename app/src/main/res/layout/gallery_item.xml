<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_import_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="W,1:1"
        android:scaleType="centerCrop"
        />



    <ImageView
        android:id="@+id/image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="10px"
        android:paddingBottom="10px"
        android:paddingTop="30px"
        android:paddingStart="30px"
        android:src="@drawable/qmx_photovideo_selector"
        />

    
    <ImageView
        android:id="@+id/img_video_play"
        android:layout_width="15px"
        android:layout_height="17px"
        android:src="@drawable/qmx_photovideo_bofang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10px"
        android:layout_marginBottom="10px"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_import_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="#FFFEFEFE"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10px"
        android:layout_marginEnd="10px"
        android:visibility="gone"
        />

    <View
        android:id="@+id/pic_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A000000"
        android:visibility="gone"
        />

    <View
        android:id="@+id/video_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qmx_photovideo_videozhezhao"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>